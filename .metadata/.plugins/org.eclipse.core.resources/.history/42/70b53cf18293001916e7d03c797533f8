package me.jadc.jadbreaks.cmd;

import org.bukkit.Bukkit;
import org.bukkit.GameMode;
import org.bukkit.Location;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerJoinEvent;
import org.bukkit.potion.PotionEffect;
import org.bukkit.potion.PotionEffectType;

import me.jadc.jadbreaks.tools.Conf;
import me.jadc.jadbreaks.tools.Message;
import net.md_5.bungee.api.ChatColor;

public class Approve implements CommandExecutor, Listener {
	
	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		
		if(cmd.getName().equalsIgnoreCase("approve")){
			
			if(args.length != 1) {
				Message.invalidArgs(sender, "/approve <user>");
				return true;
			}
			
			if(!sender.isOp()) {
				Message.noPerms(sender);
				return true;
			}
			
			Player p = Bukkit.getPlayer(args[0]);
			
			if(p == null) {
				Message.error(sender, "Invalid player");
				return true;
			}
			
			approve(p);
			Bukkit.broadcastMessage(ChatColor.YELLOW + p.getDisplayName() + " has been approved to play!");
		}
		
		return true;
	}
	
	@EventHandler
	public void onJoin(PlayerJoinEvent e) {
		if(Conf.playerData.getConfig().getBoolean(e.getPlayer().getUniqueId() + ".approved")){
			approve(e.getPlayer());
		}else {
			e.getPlayer().setGameMode(GameMode.SPECTATOR);
		}
	}
	
	public void approve(Player p) {
		Conf.playerData.getConfig().set(p.getUniqueId() + ".approved", true);
		Message.bar(p, ChatColor.BLACK + "Where we droppin?");
		p.teleport(new Location(Bukkit.getServer().getWorld("world"), Math.random() * 100, 300, Math.random() * 100, 0, 90));
		p.setGameMode(GameMode.SURVIVAL);
		p.setFallDistance(-1000000F);
		p.addPotionEffect(new PotionEffect(PotionEffectType.SLOW, 100, 255));
		
	}
}
