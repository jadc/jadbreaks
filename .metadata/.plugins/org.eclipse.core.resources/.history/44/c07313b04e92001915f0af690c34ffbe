package me.jadc.jadbreaks.cmd;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.Listener;

import me.jadc.jadbreaks.tools.Message;

public class Approve implements CommandExecutor, Listener {
	
	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		
		if(cmd.getName().equalsIgnoreCase("approve")){
			
			if(args.length != 1) {
				Message.invalidArgs(sender, "/approve <user>");
				return true;
			}
			
			if(!sender.isOp()) {
				Message.noPerms(sender);
				return true;
			}
			
			Player p = Bukkit.getPlayer(args[0]);
			
			if(p == null) {
				Message.error(sender, "Invalid player");
			}
			
			
		}
		
		return true;
	}
}
