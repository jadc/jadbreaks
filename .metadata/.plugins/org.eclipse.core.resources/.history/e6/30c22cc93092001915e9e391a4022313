package me.jadc.jadbreaks.objects;

import java.util.ArrayList;
import java.util.List;

import org.bukkit.Material;
import org.bukkit.event.Listener;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.meta.ItemMeta;

import net.md_5.bungee.api.ChatColor;

public class Perk extends ItemStack implements Listener {
	
	public Perk(String element) {
		super(Material.APPLE);
		
		ItemMeta meta = getItemMeta();
		List<String> lore = new ArrayList<String>();
		meta.setDisplayName(ChatColor.RESET + "" + ChatColor.GOLD + (element.replaceAll("_", " ")) + " Perk");
		lore.add(ChatColor.YELLOW + "Consuming this");
	}
}
