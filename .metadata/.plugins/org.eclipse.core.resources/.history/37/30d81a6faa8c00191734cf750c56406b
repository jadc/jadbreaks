package me.jadc.jadbreaks.objects;

import java.util.List;
import java.util.logging.Level;

import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.event.Listener;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.meta.ItemMeta;

import me.jadc.jadbreaks.jb;
import net.md_5.bungee.api.ChatColor;

public class CustomItem extends ItemStack implements Listener {
	
	ItemStack item;
	String name;
	List<String> lore;
	ItemMeta meta;
	
	public CustomItem(Material mat, String name) {
		super(mat);
		this.item = new ItemStack(mat);
		this.name = ChatColor.RESET + name;
		
		this.meta = item.getItemMeta();
		meta.setDisplayName(name);
		item.setItemMeta(meta);
	}
	public CustomItem(Material mat, String name, List<String> lore) {
		super(mat);
		this.item = new ItemStack(mat);
		this.name = ChatColor.RESET + name;
		this.lore = lore;
		
		this.meta = item.getItemMeta();
		meta.setDisplayName(name);
		meta.setLore(lore);
		item.setItemMeta(meta);
	}
	
	public CustomItem(Material mat, String name, boolean events) {
		super(mat);
		this.item = new ItemStack(mat);
		this.name = ChatColor.RESET + name;
		
		this.meta = item.getItemMeta();
		meta.setDisplayName(name);
		item.setItemMeta(meta);
		
		if(events) jb.instance.getServer().getPluginManager().registerEvents(this, jb.instance);
	}
	
	public CustomItem(Material mat, String name, List<String> lore, boolean events) {
		super(mat);
		this.item = new ItemStack(mat);
		this.name = ChatColor.RESET + name;
		this.lore = lore;
		
		this.meta = item.getItemMeta();
		meta.setDisplayName(name);
		meta.setLore(lore);
		item.setItemMeta(meta);
		
		if(events) jb.instance.getServer().getPluginManager().registerEvents(this, jb.instance);
	}
	
	public ItemStack getItem() {
		return item;
	}
	
	public ItemMeta getMeta() {
		return meta;
	}
	
	public void setMeta(ItemMeta m) {
		item.setItemMeta(m);
	}
	
	public String getName() {
		return meta.getDisplayName();
	}
	
	public void setName(String s) {
		meta.setDisplayName(s);
	}
	
	public List<String> getLore() {
		return meta.getLore();
	}
	
	public String getLore(int index) {
		return meta.getLore().get(index);
	}
	
	public void setLore(List<String> l) {
		meta.setLore(l);
	}
	
	public void setLore(int index, String s) {
		lore.set(index, ChatColor.GRAY + s);
	}
	
	public boolean isSelf(ItemStack foreign) {
		if(foreign == null) { Bukkit.getLogger().log(Level.INFO, "1"); return false; }
		if(!foreign.hasItemMeta()) { Bukkit.getLogger().log(Level.INFO, "2"); return false; }
		if(foreign.getItemMeta() == null) { Bukkit.getLogger().log(Level.INFO, "3"); return false; }
		if(!foreign.getItemMeta().hasDisplayName()) { Bukkit.getLogger().log(Level.INFO, "4"); return false; }
		if(foreign.getItemMeta().getDisplayName() == null) { Bukkit.getLogger().log(Level.INFO, "5"); return false; }
		if(!foreign.getItemMeta().getDisplayName().equals(name)) { Bukkit.getLogger().log(Level.INFO, foreign.getItemMeta().getDisplayName() + " vs. " + name); return false; }
		Bukkit.getLogger().log(Level.INFO, "---");
		return true;
	}
}
