package me.jadc.jadbreaks.objects;

import java.util.List;
import java.util.logging.Level;

import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.event.Listener;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.meta.ItemMeta;

import me.jadc.jadbreaks.jb;
import net.md_5.bungee.api.ChatColor;

public class CustomItem extends ItemStack implements Listener {
	
	ItemStack item;
	
	public CustomItem(Material mat, String name) {
		super(mat);
		this.item = new ItemStack(mat);
		
		ItemMeta meta = item.getItemMeta();
		meta.setDisplayName(ChatColor.RESET + name);
		item.setItemMeta(meta);
		
		jb.instance.getServer().getPluginManager().registerEvents(this, jb.instance);
	}
	
	public ItemStack getItem() {
		return item;
	}
	
	public ItemMeta getMeta() {
		return item.getItemMeta();
	}
	
	public void setMeta(ItemMeta m) {
		item.setItemMeta(m);
	}
	
	public String getName() {
		return item.getItemMeta().getDisplayName();
	}
	
	public void setName(String s) {
		ItemMeta tempMeta = item.getItemMeta();
		tempMeta.setDisplayName(s);
		item.setItemMeta(tempMeta);
	}
	
	public List<String> getLore() {
		return item.getItemMeta().getLore();
	}
	
	public String getLore(int index) {
		return item.getItemMeta().getLore().get(index);
	}
	
	public void setLore(List<String> l) {
		ItemMeta tempMeta = item.getItemMeta();
		tempMeta.setLore(l);
		item.setItemMeta(tempMeta);
	}
	
	public void setLore(int index, String s) {
		ItemMeta tempMeta = item.getItemMeta();
		tempMeta.getLore().set(index, ChatColor.GRAY + s);
		item.setItemMeta(tempMeta);
	}
	
	public void addLore(String s) {
		ItemMeta tempMeta = item.getItemMeta();
		tempMeta.getLore().set(index, ChatColor.GRAY + s);
		item.setItemMeta(tempMeta);
	}
	
	public boolean isSelf(ItemStack foreign) {
		if(foreign == null) return false;
		if(!foreign.hasItemMeta()) return false;
		if(foreign.getItemMeta() == null) return false;
		if(!foreign.getItemMeta().hasDisplayName()) return false;
		if(foreign.getItemMeta().getDisplayName() == null) return false;
		if(!foreign.getItemMeta().getDisplayName().equals(getName())) return false;
		return true;
	}
}
