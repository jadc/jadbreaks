package me.jadc.jadbreaks.items;

import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerMoveEvent;

import me.jadc.jadbreaks.objects.CustomItem;

public class Test extends CustomItem implements Listener {

	public Test() {
		super(Material.BONE, "Boner");
		registerEvents();
	}
	
	@EventHandler
	public void onMove(PlayerMoveEvent e) {
		Bukkit.broadcastMessage(getName());
		if(isSelf(e.getPlayer().getInventory().getItemInMainHand())) {
			e.getPlayer().sendMessage("a");
		}else {
			e.getPlayer().getInventory().addItem(getItem());
		}
	}
}
